/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for all data.
 *
 * Data Structure:
 * All user data is nested under `/users/{userId}`, where `userId` MUST match the Firebase Auth UID.
 * Vendor data is nested under `/vendors/{vendorId}`, where `vendorId` MUST match the Firebase Auth UID.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - Vendors can only manage their own profile.
 * - Public read access is granted for approved vendors, but write access is restricted.
 * - Admins can read all vendor data.
 * - User and general vendor listing is disallowed.
 *
 * Denormalization for Authorization:
 * The `userId` and `vendorId` are denormalized into the document path itself,
 * allowing for simple `isOwner(userId)` checks without additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'admin@bantconfirm.com';
    }

    /**
     * @description Secure user accounts under /users/{userId}. Only the authenticated user can manage their own account.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // User listing is not permitted.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }
    
    /**
     * @description Secure vendor profiles under /vendors/{vendorId}.
     * - Any authenticated user can create their own vendor profile.
     * - Only the owning vendor can update their profile.
     * - Public can read approved vendor profiles.
     * - Admin can read and update all vendor profiles.
     * @path /vendors/{vendorId}
     */
    match /vendors/{vendorId} {
        // Public can read an approved vendor's profile. Admin can read any.
        allow get: if resource.data.status == 'approved' || isAdmin();

        // Only admin can list all vendors.
        allow list: if isAdmin(); 
        
        // A user can create a vendor profile for themselves.
        allow create: if isOwner(vendorId) && request.resource.data.id == vendorId;
        
        // The owner of the vendor profile or an admin can update it.
        allow update: if isOwner(vendorId) || isAdmin();

        // The owner of the vendor profile or an admin can delete it.
        allow delete: if isOwner(vendorId) || isAdmin();
    }

    /**
     * @description Secure leads under /leads/{leadId}.
     * - Any signed-in user can create a lead.
     * - Only admins can read, update, or delete leads.
     * @path /leads/{leadId}
     */
    match /leads/{leadId} {
      allow get, list, update, delete: if isAdmin();
      allow create: if isSignedIn();
    }

    /**
     * @description Public read, admin write for products.
     * @path /products/{productId}
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    /**
     * @description Public read, admin write for hero slides.
     * @path /heroSlides/{slideId}
     */
    match /heroSlides/{slideId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @description Public read, admin write for promotions.
     * @path /promotions/{promoId}
     */
    match /promotions/{promoId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
  }
}
